    "version": "0.2.0",
    "configurations": [

        {
            "name": "Board",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "console": "integratedTerminal",
            // do not load docker-compose env file
            "envFile": "${workspaceFolder}/.envx",

            "justMyCode": true,
            "args": ["run", "sentiment/board.py"]
        },
        {
            "name": "Celery - App",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            // do not load docker-compose env file
            "envFile": "${workspaceFolder}/.envx",
            "justMyCode": true,
            "args": [
                "-A",
                "sentiment.celery_app",
                "worker",
                "-Q",
                "scrape,sentiment",
                // "--autoscale=8,1",
                "--concurrency=2",
                "--loglevel=INFO"
            ]
        },
        {
            "name": "Celery - Beat",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            // do not load docker-compose env file
            "envFile": "${workspaceFolder}/.envx",
            "justMyCode": true,
            "args": [
                "-A",
                "sentiment.celery_app",
                "beat"
            ]
        },

        {
            "name": "Alembic upgrade",
            "type": "python",
            "request": "launch",
            "module": "alembic",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "upgrade",
                "head",
            ]
        }

    ]
}